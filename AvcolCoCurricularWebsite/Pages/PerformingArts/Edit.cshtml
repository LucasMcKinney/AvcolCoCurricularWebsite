@page "{id:int?}"
@model AvcolCoCurricularWebsite.Pages.PerformingArts.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>PerformingArt</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PerformingArt.PerformingArtID" />
            <div class="form-group">
                <label asp-for="PerformingArt.ActivityID" class="control-label"></label>
                <select asp-for="PerformingArt.ActivityID" class="form-control" asp-items="ViewBag.ActivityID">
                    <option value="">-- Select Activity --</option>
                </select>
                <span asp-validation-for="PerformingArt.ActivityID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PerformingArt.Day" class="control-label"></label>
                <select asp-for="PerformingArt.Day" class="form-control" name="PerformingArt.Day">
                <option value="">-- Select Day --</option>
                    <option value=1>Monday</option>
                    <option value=2>Tuesday</option>
                    <option value=3>Wednesday</option>
                    <option value=4>Thursday</option>
                    <option value=5>Friday</option>
                </select>
                <span asp-validation-for="PerformingArt.Day" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PerformingArt.StartTime" class="control-label"></label>
                <input asp-for="PerformingArt.StartTime" class="form-control" />
                <span asp-validation-for="PerformingArt.StartTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PerformingArt.EndTime" class="control-label"></label>
                <input asp-for="PerformingArt.EndTime" class="form-control" />
                <span asp-validation-for="PerformingArt.EndTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}