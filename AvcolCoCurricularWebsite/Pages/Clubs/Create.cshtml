@page
@model AvcolCoCurricularWebsite.Pages.Clubs.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Club</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Club.ActivityID" class="control-label"></label>
                <select asp-for="Club.ActivityID" class ="form-control" asp-items="ViewBag.ActivityID">
                    <option value="">-- Select Activity --</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Club.RoomNumber" class="control-label"></label>
                <input asp-for="Club.RoomNumber" class="form-control" />
                <span asp-validation-for="Club.RoomNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Club.Day" class="control-label"></label>
                <select asp-for="Club.Day" class="form-control" name="Club.Day">
                <option value="">-- Select Day --</option>
                    <option value=1>Monday</option>
                    <option value=2>Tuesday</option>
                    <option value=3>Wednesday</option>
                    <option value=4>Thursday</option>
                    <option value=5>Friday</option>
                </select>
                <span asp-validation-for="Club.Day" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Club.StartTime" class="control-label"></label>
                <input asp-for="Club.StartTime" class="form-control" />
                <span asp-validation-for="Club.StartTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Club.EndTime" class="control-label"></label>
                <input asp-for="Club.EndTime" class="form-control" />
                <span asp-validation-for="Club.EndTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}